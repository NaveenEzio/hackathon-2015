        <script type="text/javascript">
            $('#eventTime .time').timepicker({
                    'showDuration' : true,
                    'timeFormat' : 'g:ia'
            });
            $('#eventTime .date').datepicker({
                    'format' : 'yyyy-m-d',
                    'autoclose' : 'true'
            });
            $('#responseTime .time').timepicker({
                    'showDuration' : true,
                    'timeFormat' : 'g:ia'
            });
            $('#responseTime .date').datepicker({
                    'format' : 'yyyy-m-d',
                    'autoclose' : 'true'
            });
        </script>
